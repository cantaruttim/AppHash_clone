FloatLayout:

    # editamos a imagem e a cor
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#001824")
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        pos_hint: {"rigth": 1, "top": 0.9}
        size_hint: 1, 0.2
        source: "icones/hash.png"
        id: foto_perfil
    ScreenManager:
        pos_hint: {"rigth": 1, "top": 0.7}
        size_hint: 1, 0.7
        id: screen_manager

